{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "cli/dist",
        "types": [
            "node"
        ]
    },
    "include": [
        "cli/src/**/*"
    ]
}